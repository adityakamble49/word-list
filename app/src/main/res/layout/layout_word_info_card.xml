<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="6dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_word_info_card"
        android:paddingStart="16dp"
        android:paddingTop="24dp"
        android:paddingEnd="16dp"
        android:paddingBottom="24dp">

        <TextView
            android:id="@+id/tv_word_info_type_label"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_word_pronunciation"
            android:paddingStart="12dp"
            android:paddingTop="2dp"
            android:paddingEnd="12dp"
            android:paddingBottom="2dp"
            android:text="Type" />

        <TextView
            android:id="@+id/tv_word_info_type_value"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_word_info_type_label"
            android:layout_alignBottom="@id/tv_word_info_type_label"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/tv_word_info_definition_label"
            android:gravity="center"
            android:text="adjective"
            android:textColor="@color/default_opposite_text" />

        <TextView
            android:id="@+id/tv_word_info_definition_label"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_word_info_type_value"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_word_pronunciation"
            android:paddingStart="12dp"
            android:paddingTop="2dp"
            android:paddingEnd="12dp"
            android:paddingBottom="2dp"
            android:text="Definition" />

        <TextView
            android:id="@+id/tv_word_info_definition_value"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_word_info_definition_label"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/tv_word_info_definition_label"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/word_definition_default"
            android:textColor="@color/default_opposite_text" />

        <TextView
            android:id="@+id/tv_word_info_example_label"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_word_info_definition_value"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_word_pronunciation"
            android:paddingStart="12dp"
            android:paddingTop="2dp"
            android:paddingEnd="12dp"
            android:paddingBottom="2dp"
            android:text="Example" />

        <TextView
            android:id="@+id/tv_word_info_example_value"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_word_info_example_label"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/tv_word_info_definition_label"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/word_definition_default"
            android:textColor="@color/default_opposite_text" />

    </RelativeLayout>

</android.support.v7.widget.CardView>