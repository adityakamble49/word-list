<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="4dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/default_primary_text"
        android:paddingStart="16dp"
        android:paddingTop="24dp"
        android:paddingEnd="16dp"
        android:paddingBottom="24dp">


        <TextView
            android:id="@+id/tv_word_game_question_word"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_word_game_question_word"
            android:paddingStart="8dp"
            android:paddingTop="2dp"
            android:paddingEnd="8dp"
            android:paddingBottom="2dp"
            android:text="eloquent"
            android:textColor="@color/default_primary_text" />

        <TextView
            android:id="@+id/tv_word_game_question_start"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/tv_word_game_question_word"
            android:text="@string/word_game_question_start"
            android:textColor="@color/default_opposite_text" />

        <TextView
            android:id="@+id/tv_word_game_question_end"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_word_game_question_word"
            android:layout_marginTop="8dp"
            android:text="@string/word_game_question_end"
            android:textColor="@color/default_opposite_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_word_game_question_end"
            android:layout_marginTop="32dp"
            android:gravity="bottom|center">

            <TextView
                android:id="@+id/tv_word_game_answer_word_1"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_word_game_answer_word"
                android:gravity="center"
                android:paddingStart="24dp"
                android:paddingTop="8dp"
                android:paddingEnd="24dp"
                android:paddingBottom="8dp"
                android:text="Gawky"
                android:textColor="@color/default_opposite_text"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_word_game_answer_word_2"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_word_game_answer_word"
                android:gravity="center"
                android:paddingStart="24dp"
                android:paddingTop="8dp"
                android:paddingEnd="24dp"
                android:paddingBottom="8dp"
                android:text="Fluent"
                android:textColor="@color/default_opposite_text"
                android:textSize="20sp" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
