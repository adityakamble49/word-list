<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="6dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_dbcard_wod"
        android:paddingStart="16dp"
        android:paddingTop="24dp"
        android:paddingEnd="16dp"
        android:paddingBottom="24dp">

        <TextView
            android:id="@+id/tv_wod_heading"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/word_of_the_day"
            android:textColor="@color/default_opposite_text" />

        <ImageView
            android:id="@+id/btn_wod_save_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="?selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/ic_save" />

        <TextView
            android:id="@+id/tv_wod_word"
            style="@style/Base.TextAppearance.AppCompat.Display1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_wod_heading"
            android:layout_marginTop="4dp"
            android:text="@string/word_name_default"
            android:textColor="@color/default_opposite_text" />

        <TextView
            android:id="@+id/tv_wod_pronunciation"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_wod_word"
            android:layout_marginTop="4dp"
            android:text="@string/word_pronunciation_default"
            android:textColor="@color/default_opposite_text" />

        <TextView
            android:id="@+id/tv_wod_definition"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_wod_pronunciation"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/word_definition_default"
            android:textColor="@color/default_opposite_text" />

    </RelativeLayout>
</android.support.v7.widget.CardView>